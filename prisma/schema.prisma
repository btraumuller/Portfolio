generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model projects {
  project_id         Decimal  @id @unique(map: "project_id") @db.Decimal(10, 0)
  project_name       String   @db.VarChar(1000)
  project_date       DateTime @db.Date
  imageSrc           String   @db.VarChar(1000)
  image_altText      String?  @db.VarChar(100)
  thumbnail_imageSrc String   @db.VarChar(50)
  thumbnail_altText  String   @db.VarChar(50)
  description_short  String   @db.VarChar(250)
  descripition_long  String   @db.VarChar(1000)
}

model contact_us {
  id          Int    @id @default(autoincrement())
  first_name  String @db.Text
  last_name   String @db.Text
  email       String @db.Text
  description String @db.Text
}
